<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/alpha_black_80"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layoutFather"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/margin5dp"
            android:layout_marginRight="@dimen/margin50dp"
            android:layout_marginLeft="@dimen/margin50dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin140dp">
           <LinearLayout
               android:orientation="vertical"
               android:background="@drawable/title_back"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/textViewPopInputTitle"
                    android:gravity="center"
                    android:text="总金额"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin40dp" />
               <LinearLayout
                   android:orientation="vertical"
                   android:background="@color/white"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <com.qixiu.wigit.myedittext.MyEditTextView
                       app:input_type="number"
                       android:id="@+id/edittextInputPop"
                       android:paddingLeft="@dimen/margin20dp"
                       android:layout_margin="@dimen/margin15dp"
                       android:background="@drawable/sharp_background_line1"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/margin30dp" />
                   <View
                       android:background="@color/lineColor"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/margin0.5dp"></View>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/textViewCancleInput"
                        android:text="取消"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent" />
                    <View
                        android:background="@color/lineColor"
                        android:layout_marginTop="@dimen/margin5dp"
                        android:layout_marginBottom="@dimen/margin5dp"
                        android:layout_width="@dimen/margin0.5dp"
                        android:layout_height="match_parent"></View>
                    <TextView
                        android:id="@+id/textViewConfirmInput"
                        android:text="确定"
                        android:textColor="@color/blue"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0px"
                        android:layout_height="match_parent" />
                </LinearLayout>
               </LinearLayout>
           </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>