<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <!--<com.qixiu.wigit.VerticalSwipeRefreshLayout-->
        <!--android:id="@+id/swipRefreshHome"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/bannerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin230dp"
                app:rollviewpager_play_delay="6000"></com.jude.rollviewpager.RollPagerView>
            <ImageView
                android:scaleType="fitXY"
                android:background="@color/white"
                android:id="@+id/imageViewRollMask"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin230dp" />
            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/recycler_home"
                android:layout_marginBottom="@dimen/margin40dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin15dp"
                android:layout_marginRight="@dimen/margin15dp"
                android:layout_marginTop="@dimen/margin200dp"></com.jcodecraeer.xrecyclerview.XRecyclerView>
        </RelativeLayout>
    <!--</com.qixiu.wigit.VerticalSwipeRefreshLayout>-->


</LinearLayout>