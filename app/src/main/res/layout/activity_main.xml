<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qixiu.newoulingzhu.mvp.view.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></RelativeLayout>

    <FrameLayout
        android:id="@+id/fragmen_for_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >


    </FrameLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/margin60dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <View
            android:background="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5dp"></View>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/btn_white_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:paddingRight="@dimen/margin10dp"
                android:id="@+id/textViewHomeBottom"
                android:layout_weight="1"
                android:gravity="center"
                android:drawableTop="@mipmap/home_index_sel3x"
                android:textColor="@color/txt_737373"
                android:text="首页"
                android:layout_width="0px"
                android:layout_height="wrap_content"
              />

            <TextView
                android:textColor="@color/txt_737373"
                android:paddingLeft="@dimen/margin10dp"
                android:id="@+id/textViewPersonBottom"
                android:layout_weight="1"
                android:text="个人中心"
                android:gravity="center"
                android:drawableTop="@mipmap/home_per_center_nor2x"
                android:layout_alignParentRight="true"
                android:layout_width="0px"
                android:layout_height="wrap_content"
              />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/margin80dp"
        android:layout_height="@dimen/margin80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin5dp">

        <ImageView
            android:id="@+id/imageViewHomeBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/home_infor2x" />
        <TextView
            android:layout_marginBottom="@dimen/margin15dp"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:text="消息"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/textViewMessageBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewHomeBottom"
            android:layout_alignRight="@+id/imageViewHomeBottom"
            android:background="@drawable/homne_bottom_back"
            android:gravity="center"
            android:text=""
            android:textColor="@color/theme_color" />
    </RelativeLayout>
</RelativeLayout>
