<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/alpha_black_80"
    android:id="@+id/relativeLayout_pop_dismiss"
    android:layout_height="match_parent">
    <!--升级会员，购买会员的列表-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp">
            <View
                android:layout_marginLeft="@dimen/margin40dp"
                android:background="@color/txt_4D4D4D"
                android:layout_width="@dimen/margin100dp"
                android:layout_height="@dimen/margin0.5dp"></View>
            <TextView
                android:id="@+id/textViewTitlePop"
                android:paddingRight="@dimen/margin10dp"
                android:paddingLeft="@dimen/margin10dp"
                android:textColor="@color/font_grey"
                android:text="购买会员"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginRight="@dimen/margin40dp"
                android:background="@color/txt_4D4D4D"
                android:layout_width="@dimen/margin100dp"
                android:layout_height="@dimen/margin0.5dp"></View>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5dp"
            android:layout_marginLeft="@dimen/margin15dp"
            android:layout_marginRight="@dimen/margin15dp"
            android:background="@color/lineColor"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewMenberList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_marginTop="@dimen/margin20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:text="开通即视为同意"
               style="@style/text_normal" />
            <TextView
                android:id="@+id/textViewChargeRules"
                android:textSize="12sp"
                android:textColor="@color/theme_color"
                android:text="《欧伶猪VIP会员服务协议》"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <Button
            android:id="@+id/btnConfirmOpen"
            android:layout_marginBottom="@dimen/margin30dp"
            android:layout_marginRight="@dimen/margin20dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin20dp"
            android:background="@mipmap/btn_bg2x"
            android:text="确认开通"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin30dp" />
    </LinearLayout>
</RelativeLayout>