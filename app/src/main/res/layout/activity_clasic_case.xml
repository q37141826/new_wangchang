<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qixiu.newoulingzhu.mvp.view.activity.home.cases.ClasicCaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/title_back"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/vg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_grey"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                app:tabPaddingBottom="-1dp"
                app:tabPaddingEnd="-1dp"
                app:tabPaddingStart="-1dp"
                app:tabPaddingTop="-1dp"
                app:tabIndicatorColor="@color/theme_color"
                app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin40dp"></android.support.design.widget.TabLayout>
            <View
                android:background="@color/back_grey"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin10dp"></View>
            <com.qixiu.wigit.hviewpager.HackyViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></com.qixiu.wigit.hviewpager.HackyViewPager>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
