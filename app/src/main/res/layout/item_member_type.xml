<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/margin22dp"

              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_member_name"
            style="@style/style_dredge_member_tv"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:drawableLeft="@mipmap/member_icon"
            android:drawablePadding="@dimen/margin6dp"
            />

        <ImageView
            android:id="@+id/iv_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/member_not_select"/>
    </RelativeLayout>
</LinearLayout>