<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
  >

    <LinearLayout
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin100dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/font_grey"
            android:paddingLeft="@dimen/margin10dp"
            android:id="@+id/textViewContentItem"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/margin10dp" />

        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageViewHomeHotInformation"
                android:layout_width="@dimen/margin90dp"
                android:layout_height="@dimen/margin60dp" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:background="@color/back_grey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5dp"></View>
</LinearLayout>