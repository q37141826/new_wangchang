<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/title_back"
              android:orientation="vertical">
    <RelativeLayout
      android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/txt_EBECF8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin10dp"
            android:background="@drawable/shape_home_module_bg">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin10dp"
                android:background="@drawable/shape_home_module_bg"
                android:orientation="vertical">

                <LinearLayout

                    style="@style/my_center_relativelayout">

                    <EditText
                        android:inputType="number"
                        android:id="@+id/et_reset_phone"
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="false"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dp"
                        android:background="@null"
                        android:maxLength="11"
                        android:drawableLeft="@mipmap/login_mobile2x"
                        android:drawablePadding="@dimen/margin16dp"
                        android:gravity="center_vertical"
                        android:hint="请输入原手机号码"
                        android:singleLine="true"
                        android:textColorHint="@color/hint_color_normol"
                        android:textSize="13sp"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <View
                    style="@style/style_horizontal_line"
                    android:layout_marginLeft="@dimen/margin15dp"
                    android:layout_marginRight="@dimen/margin15dp"></View>


                <LinearLayout

                    style="@style/my_center_relativelayout">


                    <EditText

                        android:id="@+id/et_checkcode"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:drawableLeft="@mipmap/login_ver_code2x"
                        android:drawablePadding="@dimen/margin15dp"
                        android:hint="请输入验证码"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:inputType="number"
                        android:textColorHint="@color/hint_color_normol"

                        android:textSize="13sp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/tv_reset_checkcode"
                        android:layout_width="@dimen/margin78dp"
                        android:layout_height="@dimen/margin25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_reset_sendcode_bg"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="@color/txt_fe9e46"
                        android:textSize="13sp"/>

                </LinearLayout>

                <View
                    style="@style/style_horizontal_line"
                    android:layout_marginLeft="@dimen/margin15dp"
                    android:layout_marginRight="@dimen/margin15dp"></View>

                <Button
                    android:id="@+id/bt_resel_botton"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="下一步"
                    android:textSize="13sp"
                    android:background="@drawable/shape_reselt_bt_bg"
                    android:layout_marginTop="@dimen/margin120dp"
                    android:layout_height="@dimen/margin40dp"
                    android:layout_marginLeft="@dimen/margin40dp"
                    android:layout_marginRight="@dimen/margin40dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>