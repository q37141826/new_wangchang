<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/viewTop05Line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5dp"
        android:background="@color/lineColor"
        android:visibility="gone"></View>

    <View
        android:id="@+id/viewTop8Line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin8dp"
        android:background="@color/back_grey"
        android:visibility="gone"></View>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="center_vertical"
            android:visibility="gone"
            android:paddingLeft="@dimen/margin15dp"
            android:id="@+id/textViewOther"
            android:background="@color/back_grey"
            android:textColor="@color/txt_4D4D4D"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin35dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin45dp">

            <ImageView
                android:id="@+id/imageViewSelecte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_marginRight="@dimen/margin10dp"
                android:src="@mipmap/select2x" />

            <TextView
                android:id="@+id/textViewItemTitle"
                style="@style/text_normal"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageViewSelecte"
                android:textColor="@color/txt_737373" />

            <TextView
                android:id="@+id/textViewPrice"
                style="@style/text_normal"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin150dp"
                android:layout_marginRight="@dimen/margin40dp"
                android:gravity="right" />

            <ImageView
                android:id="@+id/imageViewRightGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin15dp"
                android:src="@mipmap/mine_right_go2x" />

        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:background="@color/back_grey"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/linearlayoutInroduce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin100dp">
            <TextView
                android:text="根据"
                style="@style/text_normal"/>
            <TextView
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/theme_color"
                android:id="@+id/textViewRulesName"
                style="@style/text_normal" />
            <TextView
                android:text="文件计算，结果仅供参考"
                style="@style/text_normal"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/viewBottom05Line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5dp"
        android:background="@color/lineColor"
        app:layout_constraintBottom_toBottomOf="parent"></View>

    <View
        android:id="@+id/viewBottom5Line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin8dp"
        android:background="@color/back_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"></View>

</android.support.constraint.ConstraintLayout>