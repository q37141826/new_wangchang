<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/txt_fafafa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circulerHeadOrder"
            android:layout_width="@dimen/margin40dp"
            android:layout_height="@dimen/margin40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circulerHeadOrder"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin30dp">

                <TextView
                    android:id="@+id/textViewOrderTitleName"
                    style="@style/text_normal"
                    android:text=""
                    android:textColor="@color/theme_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textViewOrderTime"
                    style="@style/text_normal"
                    android:layout_alignParentRight="true"
                    android:text="时间"
                    android:textColor="@color/txt_8D8D8D"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewContent"
                    style="@style/text_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin50dp"
                    android:ellipsize="end"
                    android:maxLines="3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/mine_right_go2x" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5dp"
        android:background="@color/lineColor"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin35dp"
        android:background="@color/white"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal"
            android:text="共" />

        <TextView
            style="@style/text_normal"
            android:text="1"
            android:textColor="@color/theme_color" />

        <TextView
            style="@style/text_normal"
            android:text="件订单" />

        <TextView
            android:id="@+id/textViewOrderCost"
            android:layout_marginLeft="@dimen/margin20dp"
            style="@style/text_normal"
            android:text="总计：" />

        <TextView
            android:layout_marginRight="@dimen/margin10dp"
            android:id="@+id/textViewMoneyOrder"
            style="@style/text_normal"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5dp"
        android:background="@color/lineColor"></View>

    <LinearLayout
        android:id="@+id/linearlayoutGotoChat"
        android:paddingRight="@dimen/margin15dp"
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin40dp"
        android:background="@color/white">
            <Button
                android:id="@+id/btnOrderGotoChat"
                android:textColor="@color/white"
                android:text="去沟通"
                android:background="@drawable/btn_theme_bg_radus3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin25dp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin10dp"
        android:background="@color/back_grey"></View>
</LinearLayout>