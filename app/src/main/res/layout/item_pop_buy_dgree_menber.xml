<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--升级会员，购买会员的列表item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">



        <RelativeLayout
            android:id="@+id/relative_pop_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin70dp"
            android:paddingBottom="@dimen/margin5dp"
            android:paddingLeft="@dimen/margin15dp"
            android:paddingRight="@dimen/margin15dp"
            android:paddingTop="@dimen/margin5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewNameMember"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钻石会员"
                        android:textColor="@color/font_grey" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin5dp"
                        android:background="@drawable/btn_orange_bg"
                        android:padding="@dimen/margin2dp"
                        android:text="有效期1年"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="@color/theme_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textViewTime"
                        style="@style/text_normal"
                        android:layout_marginLeft="@dimen/margin5dp"
                        android:maxLines="2"
                        android:padding="@dimen/margin2dp"
                        android:text="有效期1年"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/imageViewSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/selected2x" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5dp"
            android:layout_marginLeft="@dimen/margin15dp"
            android:layout_marginRight="@dimen/margin15dp"
            android:background="@color/lineColor"></View>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>