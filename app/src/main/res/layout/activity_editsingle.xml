<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/title_back"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/txt_EBECF8">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin10dp"
            android:background="@drawable/shape_home_module_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout_changenickname"
                style="@style/my_center_relativelayout">

                <EditText
                    android:editable="false"
                    android:id="@+id/et_editsingle"
                    style="@style/my_center_textview"
                    android:layout_width="@dimen/margin55dp"
                    android:layout_alignParentBottom="false"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/font_grey"
                    android:textColorHint="@color/hint_color_normol"
                    android:singleLine="true"
                    android:textSize="13sp"/>
                    <com.qixiu.wigit.myedittext.MyEditTextView
                        android:paddingRight="@dimen/margin5dp"
                        app:my_edittext_gravity="center_vertical_right"
                        app:my_edittext_text_size="13sp"
                        android:id="@+id/myedittext_change"
                        android:layout_toRightOf="@+id/et_editsingle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>

            <View
                style="@style/style_horizontal_line"
                android:layout_marginLeft="@dimen/margin15dp"
                android:layout_marginRight="@dimen/margin15dp"></View>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>