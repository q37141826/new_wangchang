<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin90dp"
    android:layout_height="@dimen/margin50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textColor="@color/font_grey"
        android:paddingRight="@dimen/margin10dp"
        android:id="@+id/textViewTemplateMenu"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/txt_8D8D8D"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5dp"></View>
    <View
        android:id="@+id/viewRightLine"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/txt_8D8D8D"
        android:layout_width="@dimen/margin0.5dp"
        android:layout_height="match_parent"></View>
</android.support.constraint.ConstraintLayout>