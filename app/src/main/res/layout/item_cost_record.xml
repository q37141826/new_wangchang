<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/margin15dp"
    android:paddingRight="@dimen/margin15dp"
    android:layout_height="@dimen/margin70dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewIconCost"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_ver_code2x" />
        <LinearLayout
            android:layout_marginLeft="@dimen/margin10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="2.5">
          <TextView
              android:id="@+id/textViewCostName"
              android:text="会员开通"
             style="@style/text_normal"/>
            <TextView
                android:id="@+id/textViewCostTime"
                android:layout_marginTop="@dimen/margin10dp"
                android:textColor="@color/txt_8D8D8D"
                android:textSize="12sp"
                android:text="时间"
                style="@style/text_normal"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textViewCostMoney"
            android:maxLines="1"
            android:text="-588元"
            android:textColor="@color/theme_color"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>
    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin0.5dp"></View>
</LinearLayout>