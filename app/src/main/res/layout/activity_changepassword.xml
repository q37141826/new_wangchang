<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_back"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></RelativeLayout>

    <LinearLayout
        android:background="@color/back_grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/margin10dp"
            android:background="@drawable/backgroud_changepassword"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin45dp">

                <TextView
                    android:id="@+id/tomyright"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin15dp"
                    android:drawableLeft="@mipmap/login_mobile2x"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/yancy_grey700"
                    android:textSize="15sp" />

                <com.qixiu.wigit.myedittext.MyEditTextView
                    android:id="@+id/edittext_phone_changepsw"
                    style="@style/my_edittext_style"
                    android:layout_toRightOf="@id/tomyright"
                    app:input_type="number"
                    app:my_edittext_hint="请输入手机号码" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin0.5dp"
                android:layout_alignLeft="@+id/edittext_phone_changepsw"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin15dp"
                android:layout_marginRight="@dimen/margin15dp"
                android:background="@color/yancy_grey300"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin45dp">

                <TextView
                    android:id="@+id/tomyright1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin15dp"
                    android:drawableLeft="@mipmap/login_ver_code2x"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/yancy_grey700"
                    android:textSize="15sp"

                    />

                <com.qixiu.wigit.myedittext.MyEditTextView
                    android:id="@+id/edittext_code_changepsw"
                    style="@style/my_edittext_style"
                    android:layout_width="@dimen/margin200dp"
                    android:layout_toRightOf="@id/tomyright1"
                    app:input_type="number"
                    app:my_edittext_hint="@string/edittext_register_input_verrycode_input_rule_hint"
                    app:my_edittext_max_lenth="6" />

                <Button
                    android:id="@+id/textView_sendcode_psw"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/margin5dp"
                    android:layout_marginRight="@dimen/margin15dp"
                    android:layout_marginTop="@dimen/margin5dp"
                    android:background="@drawable/shape_wanchang_getcode_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin10dp"
                    android:paddingRight="@dimen/margin10dp"
                    android:text="@string/btn_register_get_verrycode_input_rule_hint"
                    android:textColor="@color/theme_color" />
            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin0.5dp"
                android:layout_alignLeft="@+id/edittext_code_changepsw"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin15dp"
                android:layout_marginRight="@dimen/margin15dp"
                android:background="@color/yancy_grey300"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin45dp">

                <TextView
                    android:id="@+id/tomyright2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin15dp"
                    android:drawableLeft="@mipmap/login_password2x"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/yancy_grey700"
                    android:textSize="15sp" />

                <com.qixiu.wigit.myedittext.MyEditTextView
                    android:id="@+id/edittext_newPsw_changepsw"
                    style="@style/my_edittext_style"
                    android:layout_toRightOf="@+id/tomyright2"
                    app:input_type="text_password"
                    app:my_edittext_hint="请输入新密码"
                    app:my_edittext_max_lenth="20" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin0.5dp"
                android:layout_alignLeft="@+id/edittext_newPsw_changepsw"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin15dp"
                android:layout_marginRight="@dimen/margin15dp"
                android:background="@color/yancy_grey300"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin45dp">

                <TextView
                    android:id="@+id/tomyright3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin15dp"
                    android:drawableLeft="@mipmap/login_password2x"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/yancy_grey700"
                    android:textSize="15sp" />

                <com.qixiu.wigit.myedittext.MyEditTextView
                    android:id="@+id/edittext_newPsw_confirm_changepsw"
                    style="@style/my_edittext_style"
                    android:layout_toRightOf="@+id/tomyright3"

                    app:input_type="text_password"
                    app:my_edittext_hint="请确认新密码"
                    app:my_edittext_max_lenth="20" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin0.5dp"
                android:layout_alignLeft="@+id/edittext_newPsw_changepsw"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin15dp"
                android:layout_marginRight="@dimen/margin15dp"
                android:background="@color/yancy_grey300"></View>


            <Button
                android:id="@+id/btn_confirm_pswchange"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin40dp"
                android:layout_marginLeft="@dimen/margin50dp"
                android:layout_marginRight="@dimen/margin50dp"
                android:layout_marginTop="@dimen/margin80dp"
                android:background="@drawable/shape_login_input_bg"
                android:text="完成"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>