<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/margin155dp"
        android:layout_height="@dimen/margin185dp"
        android:layout_gravity="center_horizontal"
       >

        <ImageView
            android:id="@+id/iv_template_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin0.5dp"
                android:background="@color/txt_8D8D8D"/>

            <TextView
                android:id="@+id/tv_template_title"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/margin10dp"
                android:layout_marginLeft="@dimen/margin8dp"
                android:layout_marginRight="@dimen/margin8dp"
                android:layout_marginBottom="@dimen/margin8dp"
                android:layout_height="@dimen/margin27dp"
                android:gravity="center"
                android:background="@color/white"
                android:text=""
                android:textColor="@color/txt_737373"
                android:textSize="13sp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>