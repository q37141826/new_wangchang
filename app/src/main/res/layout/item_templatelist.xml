<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin5dp">

    <RelativeLayout
        android:background="@drawable/shape_back_line_grey"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin160dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/margin0.5dp"
            android:id="@+id/imageViewTemplateContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/txt_4D4D4D"
            android:padding="@dimen/margin4dp"
            android:layout_width="match_parent"
            android:id="@+id/textViewTemplateContent"
            style="@style/text_normal"
            android:background="@color/orange50"
            android:maxLines="1"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>