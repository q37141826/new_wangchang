<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_father"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_black_80">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp"
            android:paddingLeft="@dimen/margin15dp">

            <TextView
                android:id="@+id/textViewClosePop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin10dp"
                android:paddingRight="@dimen/margin15dp"
                android:text="×"
                android:textSize="25sp" />

            <TextView
                style="@style/text_normal"
                android:layout_centerInParent="true"
                android:text="确认付款" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5dp"
            android:background="@color/lineColor"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10dp"
            android:paddingLeft="@dimen/margin15dp"
            android:paddingRight="@dimen/margin15dp">

            <TextView
                android:id="@+id/textViewPopHead"
                style="@style/text_normal"
                android:text="原价："
                android:textColor="@color/txt_8D8D8D" />

            <TextView
                android:id="@+id/textViewPreviusPrice"
                style="@style/text_normal"
                android:layout_alignParentRight="true"
                android:text="518"
                android:textColor="@color/txt_8D8D8D" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin15dp"
            android:paddingRight="@dimen/margin15dp">

            <TextView
                style="@style/text_normal"
                android:layout_centerVertical="true"
                android:text="折扣价：" />

            <TextView
                android:id="@+id/textViewRealPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="518"
                android:textColor="@color/theme_color"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_weichat_pop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50dp"
            android:paddingLeft="@dimen/margin15dp"
            android:paddingRight="@dimen/margin15dp">

            <ImageView
                android:id="@+id/tomyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/wechat2x" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_toRightOf="@+id/tomyright"
                android:orientation="vertical">

                <TextView
                    style="@style/text_normal"
                    android:text="微信支付" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐安装微信5.0以上版本" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageViewWeichatSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/select2x" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5dp"
            android:layout_marginLeft="@dimen/margin15dp"
            android:layout_marginRight="@dimen/margin15dp"
            android:background="@color/lineColor"></View>

        <RelativeLayout
            android:id="@+id/relative_alipay_pop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin50dp"
            android:paddingLeft="@dimen/margin15dp"
            android:paddingRight="@dimen/margin15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tomyright1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/alipay2x" />

            <TextView
                style="@style/text_normal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_toRightOf="@+id/tomyright1"
                android:text="支付宝支付" />

            <ImageView
                android:id="@+id/imageViewAliSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/no_selected2x" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin0.5dp"
            android:layout_marginLeft="@dimen/margin15dp"
            android:layout_marginRight="@dimen/margin15dp"
            android:background="@color/lineColor"></View>

        <Button
            android:id="@+id/btnPaySoon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin40dp"
            android:layout_marginBottom="@dimen/margin40dp"
            android:layout_marginLeft="@dimen/margin20dp"
            android:layout_marginRight="@dimen/margin20dp"
            android:layout_marginTop="@dimen/margin50dp"
            android:background="@mipmap/btn_bg2x"
            android:text="立即支付"
            android:textColor="@color/white" />

    </LinearLayout>
</RelativeLayout>