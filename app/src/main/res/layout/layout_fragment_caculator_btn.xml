<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin60dp"
        android:layout_marginRight="@dimen/margin60dp"
        android:layout_marginTop="@dimen/margin10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCalculation"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@mipmap/btn_nor_left2x"
            android:text="计算"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@mipmap/btn_pressed_right2x"
            android:text="重置"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>