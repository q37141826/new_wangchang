<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qixiu.newoulingzhu.mvp.view.activity.home.template.NewTemplateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/title_back"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/vg_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/back_grey"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerTemplateMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:onClick="gotoContract"
                    android:id="@+id/imageViewGotoContract"
                    android:src="@mipmap/template_contract_custom2x"
                    android:layout_marginRight="@dimen/margin10dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin80dp"
                    android:layout_marginLeft="@dimen/margin10dp" />

                <com.jcodecraeer.xrecyclerview.XRecyclerView
                    android:id="@+id/recyclerTamplateList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"></com.jcodecraeer.xrecyclerview.XRecyclerView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
